#%RAML 0.8

title: Machines API
baseUri: http://example.api.com/{version}
version: v1

/machines:
  get:
    responses:
      200:
        description: "Returns an existing machine"
        body:
          application/json:
            schema: |
              [
                type: 'string'
                name: 'string'
              ]
            example: |
              { "type": "Kulu", "name": "Mike" }
  post:
    body:
      application/json:
        schema: |
          type: 'string'
          name: 'string'
        example: |
              { "type": "Kulu", "name": "Mike" }
    responses:
      201:
        description: "Returns a newly created machine, with server-controlled fields like 'id' populated"
        headers:
          location: 
            description: URI of the newly created machine
            example: {baseUri}/machines/{id}
        body:
          application/json:
            schema: |
              type: 'string'
              name: 'string'
            example: |
              { "type": "Kulu", "name": "Mike" }

